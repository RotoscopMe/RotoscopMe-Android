<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nouveau projet"
            android:id="@+id/title" android:layout_gravity="center" android:textSize="60dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center" android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom :"
        android:id="@+id/name"
        android:textSize="30dp"
            />

        <EditText
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:id="@+id/editName" android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="center" android:weightSum="1">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ouvrir une vidéo"
                android:onClick="getVideo"
                android:id="@+id/get_video" />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filmer une vidéo"
                android:onClick="captureVideo"
                android:id="@+id/capture_video" />
    </LinearLayout>

</LinearLayout>